{
  "manifest_version": 3,
  "name": "WordFairy",
  "version": "1.0",
  "description": "通过readability.js提取网页内容，使用OpenRouter API提取分类词汇并高亮显示",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/readability.js", "lib/mark.js", "content.js"],
      "css": ["styles/reader.css", "styles/highlight.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}